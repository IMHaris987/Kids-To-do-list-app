<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8">

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Take a photo text -->
        <TextView
            android:id="@+id/txtTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a photo"
            android:textSize="28sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp" />

        <!-- Container for Camera Preview and Image Preview -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="50dp">

            <!-- Camera Preview View (CameraX) -->
            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

            <!-- Image Preview (after capture) -->
            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#1E1E1E"
                android:visibility="gone"
                android:contentDescription="Photo preview" />

        </FrameLayout>

        <!-- Camera Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/ic_camera"
            app:fabSize="auto"
            app:fabCustomSize="80dp"
            app:maxImageSize="40dp"
            app:backgroundTint="#66BB6A"
            app:tint="#FFFFFF"
            app:borderWidth="0dp"
            app:elevation="6dp"
            android:contentDescription="Take photo button" />

    </LinearLayout>

</RelativeLayout>